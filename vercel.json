{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "$1"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/_fallback"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=3600, s-maxage=60"
        }
      ]
    },
    {
      "source": "/(.*)-([a-zA-Z0-9_-]{8}).(js|css)(\\.map)?",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, immutable, max-age=31536000, stale-if-error=604800"
        }
      ]
    },
    {
      "source": "/service-worker.js",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=0, s-maxage=60, must-revalidate"
        },
        {
          "key" : "CDN-Cache-Control",
          "value" : "max-age=60"
        }
      ]
    }
  ],
  "github": {
    "enabled": false,
    "autoAlias": false,
    "silent": true
  }
}
